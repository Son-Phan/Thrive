<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.diary.SurveyActivities">

  <TextView
      android:id="@+id/textView7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="What have you been up to?"
      app:layout_constraintBottom_toTopOf="@+id/cardView2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <androidx.cardview.widget.CardView
      android:id="@+id/cardView2"
      android:layout_width="384dp"
      android:layout_height="120dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:orientation="horizontal"
      app:cardCornerRadius="10dp"
      app:layout_constraintBottom_toTopOf="@+id/cardView3"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.481"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.692">

    <CheckBox
        android:id="@+id/checkbox_tv"
        android:layout_width="65dp"
        android:layout_height="85dp"
        android:button="@android:color/transparent"
        android:layout_marginTop="30dp"

        android:background="@drawable/tv_image_selector"
        />

    <CheckBox
        android:id="@+id/checkbox_reading"
        android:button="@android:color/transparent"
        android:layout_width="60dp"
        android:layout_marginTop="30dp"
        android:layout_height="70dp"
        android:layout_marginLeft="80dp"

        android:background="@drawable/reading_image_selector"/>

    <CheckBox
        android:id="@+id/checkbox_gaming"
        android:layout_width="60dp"
        android:layout_height="72dp"
        android:button="@android:color/transparent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="160dp"
        android:background="@drawable/game_image_selector"/>

    <CheckBox
        android:id="@+id/checkbox_sport"
        android:layout_width="60dp"
        android:button="@android:color/transparent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"

        android:background="@drawable/sport_image_selector"
        android:layout_marginLeft="240dp" />

    <CheckBox
        android:id="@+id/checkbox_relax"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:button="@android:color/transparent"
        android:layout_marginLeft="320dp"

        android:background="@drawable/relax_image_selector"/>
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:id="@+id/cardView3"
      android:layout_width="384dp"
      android:layout_height="90dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.407"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.356" />

  <ImageButton
      android:id="@+id/save_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background ="@drawable/save_button_image"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cardView3" />


</androidx.constraintlayout.widget.ConstraintLayout>